<div class="container">
  <h2>Log in</h2>
  <div class="row row-cols-2 justify-content-around">
    <div class="col" id="login-image">
      <%= image_tag "https://sso.acesso.gov.br/assets/govbr/img/conta_govbr_v2.jpg" %>
    </div>
    <div class="col-10 col-md-6 col-lg-5">
      <div class="br-card">
        <div class="card-content">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs px-4 pt-4">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
            </div>

            <div class="form-actions">
              <div class="row justify-content-around py-4">
                <%= link_to "Cancelar", root_path, class: "br-button secondary mt-3 mt-sm-0 ml-sm-3 text-decoration-none w-25" %>
                <%# <button class="br-button secondary mt-3 mt-sm-0 ml-sm-3" type="button">Cancelar</button> %>
                <button class="br-button primary mt-3 mt-sm-0 ml-sm-3 w-25" type="submit">Entrar</button>
                <%#= f.button :submit, "Entrar", class: "br-button sign-in" %>
              </div>
            </div>
          <% end %>

          <%#= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
